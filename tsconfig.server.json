    "noEmit": false,
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "dist/server",
    "rootDir": ".",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}
